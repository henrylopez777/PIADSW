<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_italian_food"
    android:orientation="vertical"
    android:layout_marginBottom="50dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/menuColor"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBtnBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_black_24dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvFilterSelection"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Comida Mexicana"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textColor="@color/fontWitheTrans"
                    android:paddingStart="15sp"
                    android:textSize="25sp"
                    android:fontFamily="@font/pt_sans_narrow"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.7">
                <ImageView
                    android:id="@+id/ivBtnRatingFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_margin="5sp"/>
                <ImageView
                    android:id="@+id/ivBtnLocationFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_location_on_black_24dp"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

