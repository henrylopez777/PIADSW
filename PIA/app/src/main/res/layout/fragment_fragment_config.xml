                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/menuColor" />

                <Button
                    android:id="@+id/btnRegRest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/fondoColor"
                    android:drawableStart="@drawable/ic_library_add_withe_24dp"
                    android:fontFamily="@font/pt_sans_narrow"
                    android:paddingLeft="50dp"
                    android:paddingEnd="50dp"
                    android:text="Pedir Registro de Restaurante"
                    android:textAllCaps="false"
                    android:textColor="@color/fontWithe"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/menuColor" />

                <Button
                    android:id="@+id/btnCloseSesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/fondoColor"
                    android:drawableStart="@drawable/ic_phonelink_close_withe_24dp"
                    android:fontFamily="@font/pt_sans_narrow"
                    android:paddingLeft="50dp"
