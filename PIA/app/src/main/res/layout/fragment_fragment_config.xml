<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_config"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/gordito_black"/>


        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="30dp"
            android:fontFamily="@font/pt_sans_narrow_bold"
            />

        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="25dp"
            android:fontFamily="@font/pt_sans_narrow"
            />
        <TextView
            android:id="@+id/tvIdUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="15dp"
            android:fontFamily="@font/pt_sans_narrow"
            />

        <Button
            android:id="@+id/btnChangePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_camera_front_black_24dp"
            android:fontFamily="@font/pt_sans_narrow"
            android:paddingEnd="50dp"
            android:paddingLeft="50dp"
            android:text="Cambiar foto"
            android:textAllCaps="false"
            android:textColor="@color/fontWithe"
            android:textSize="25sp"  />
        <Button
            android:id="@+id/btnTomarPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_photo_camera_black_24dp"
            android:fontFamily="@font/pt_sans_narrow"
            android:paddingEnd="50dp"
            android:paddingLeft="50dp"
            android:text="Tomar Foto"
            android:textAllCaps="false"
            android:textColor="@color/fontWithe"
            android:textSize="25sp"  />
        <Button
            android:id="@+id/btnCloseSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/pt_sans_narrow"
            android:paddingEnd="50dp"
            android:paddingLeft="50dp"
            android:text="Cerrar SesiÃ³n"
            android:textAllCaps="false"
            android:textColor="@color/fontWithe"
            android:textSize="25sp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnRemoveAccess"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/pt_sans_narrow"
            android:text="Quitar Acceso"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_gravity="center"/>
    </LinearLayout>

</FrameLayout>